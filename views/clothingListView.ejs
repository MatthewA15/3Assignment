<!DOCTYPE html>
<!-- HTML5 -->
<html>
<head>
    <title><%= title %></title> 
    <!-- CSS files for styling -->
    <link rel='stylesheet' href='/Content/app.css' /> <!-- Main custom CSS file -->
    <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' /> <!-- Bootstrap CSS for styling and layout -->
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' /> <!-- Font Awesome for icons -->
</head>
<body>
    <!-- Navigation bar section -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <!-- Brand name or logo -->
          <a class="navbar-brand" href="/">INFR3120</a>
          <!-- Button for collapsing navigation bar on smaller screens -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Navigation links -->
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              <!-- Each 'li' represents a navigation item -->
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/projects">Projects</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact Us</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/clothing-items/view-clothing">Clothing</a>
              </li>
            </ul>
          </div>
        </div>
      </nav> <!-- End of the navigation bar -->
    <!-- Main content area -->
    <div class="container mt-4">
      <!-- Page title -->
      <h1 class="text-center">Clothing Items</h1>
      <!-- Button to add new clothing item -->
      <div class="text-center mb-3">
        <a href="/clothing-items/add-clothing" class="btn btn-primary">Add New Item</a>
      </div>
      <!-- Table for displaying clothing items -->
      <table class="table table-bordered">
        <thead>
          <!-- Table headers -->
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Size</th>
            <th>Color</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Loop each item and display in a table-->
          <% items.forEach(function(item) { %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.category %></td>
              <td><%= item.size %></td>
              <td><%= item.color %></td>
              <td>
                <!-- Edit and Delete buttons-->
                <a href="/clothing-items/edit-clothing/<%= item._id %>" class="btn btn-secondary btn-sm">Edit</a>
                <form action="/clothing-items/delete-clothing/<%= item._id %>" method="post" onsubmit="return confirmDelete()" style="display: inline-block;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <!-- Delete confirmation -->
    <script>
      function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
      }
    </script>
    <!-- Social media links -->
    <div class="socials" style="text-align: center;">
        <a href="https://www.linkedin.com/in/matthew-allicock-9026b0233/" target="_blank">LinkedIn</a>
        <a href="https://github.com/MatthewA15/3Assignment.git" target="_blank">GitHub</a>
    </div>
</body>
</html>
